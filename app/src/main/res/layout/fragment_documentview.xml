<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.joanzapata.pdfview.PDFView
        android:id="@+id/pdfview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:id="@+id/documentview_relativeNav"
        android:background="#B4005a7c"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="72dp">


        <Button
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:id="@+id/documentview_prevpage"
        android:background="@drawable/leftarrow_button_background"
        android:alpha="1"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@+id/documentview_tvpage"
        android:layout_centerVertical="true"/>

        <com.kc.WidgetKC.TextViewBold
        android:id="@+id/documentview_tvpage"
        android:layout_width="140dp"
        android:layout_height="32dp"
        android:layout_centerInParent="true"
        android:text="134/394"
        android:textAlignment="center"
        android:textSize="24sp"
        android:alpha="1"
        android:background="@drawable/page_tv_background"
        android:textColor="@color/black"
        />

        <Button
            android:layout_marginLeft="12dp"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:id="@+id/documentview_nextpage"
        android:background="@drawable/rightarrow_button_background"
        android:alpha="1"
            android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/documentview_tvpage"/>

    </RelativeLayout>

