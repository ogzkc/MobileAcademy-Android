<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:padding="2dp">

    <ImageView
        android:id="@+id/listitemstore_ivLogo"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="2dp"
        android:src="@drawable/ic_maths" />

    <TextView
        android:id="@+id/listitemstore_tvDocName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@+id/listitemstore_tvPrice"
        android:layout_toRightOf="@+id/listitemstore_ivLogo"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Differential Equations Lecture Notes"
        android:textColor="#000000"
        android:textSize="16sp"


        />

    <TextView
        android:id="@+id/listitemstore_tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="4dp"
        android:layout_marginTop="8dp"
        android:text="Free"
        android:textColor="#444444"
        android:textSize="15sp" />

    <Button
        android:id="@+id/listitemstore_buttonAddToLibrary"
        android:layout_width="38dp"
        android:layout_height="34dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/download_button_background"

        android:textAllCaps="false"
        android:textSize="14sp"

        />


    <com.kc.WidgetKC.ButtonBoldType
        android:id="@+id/listitemstore_buttonPreviewLook"
        android:layout_width="115dp"
        android:layout_height="34dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="4dp"

        android:layout_marginRight="52dp"
        android:background="@drawable/previewlook_button_background"
        android:drawableLeft="@drawable/ic_previewlook"
        android:paddingRight="12dp"
        android:text="Preview"
        android:textAllCaps="false"
        android:textSize="16sp"

        />

    <TextView
        android:id="@+id/listitemstore_tvPublisher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="4dp"
        android:layout_toLeftOf="@+id/listitemstore_buttonPreviewLook"
        android:layout_toRightOf="@+id/listitemstore_ivLogo"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Emre Sermutlu"
        android:textColor="#000000"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/listitemstore_ivRightArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/listitemstore_tvPrice"
        android:layout_marginRight="2dp"

        android:layout_marginTop="6dp"
        android:src="@drawable/ic_rightarrow" />


</RelativeLayout>